{
  "compilerOptions": {
    "target": "es5",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["ESNext", "DOM"],      
    "outDir": "./dist",                    
    "declaration": true,                  
    "declarationMap": true,    
    "watch": true,           
    "composite": true,
    "strict": true,
    "alwaysStrict": true,                           
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
  },
  "include": ["src/"],
  "exclude": ["tests/**", "node_modules/**", "dist/**", "docs/**", "release.config.js"]
}
