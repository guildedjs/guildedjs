{
  "compilerOptions": {
    "strict": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "pretty": true,
    "module": "CommonJS",
    "target": "ES6",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node",
      "jest"
    ],
    "sourceMap": true,
    "incremental": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "dist/**"
  ]
}