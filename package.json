{
  "name": "@guildedjs/main",
  "version": "0.0.0",
  "description": "Main overarching package utilizing lerna to manage all the @guildedjs packages",
  "main": "dist/index.js",
  "private": true,
  "scripts": {
    "build": "npx lerna run build",
    "bootstrap": "npx lerna bootstrap",
    "lint": "npx eslint packages/ --ext .ts",
    "lint:fix": "npx eslint packages/ --ext .ts --fix",
    "test:run": "npm run build && node packages/guilded.js/__tests__/index.js",
    "test": "npm run lint && npm run build",
    "docs": "npx rimraf docs && npx typedoc packages && node scripts/post-docs.js",
    "prepublishOnly": "npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/guildedjs/guildedjs.git"
  },
  "author": "Zaid \"Nico\" Arshad <me@zaid-arshad.tech>",
  "license": "MIT",
  "prettier": {
    "semi": true,
    "trailingComma": "all",
    "printWidth": 120,
    "tabWidth": 4,
    "endOfLine": "auto"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-angular": "^11.0.0",
    "@strictsoftware/typedoc-plugin-monorepo": "^0.3.1",
    "@typescript-eslint/eslint-plugin": "^3.9.0",
    "@typescript-eslint/parser": "^3.9.0",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-simple-import-sort": "^5.0.3",
    "husky": "^4.3.0",
    "lerna": "^3.22.1",
    "lint-staged": "^10.4.2",
    "pinst": "^2.1.1",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "typedoc": "^0.19.2",
    "typedoc-plugin-remove-references": "0.0.5",
    "typescript": "^4.0.5"
  },
  "husky": {
    "hooks": {
      "build": "npm run build",
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "bugs": {
    "url": "https://github.com/guildedjs/guildedjs/issues"
  },
  "homepage": "https://github.com/guildedjs/guildedjs#readme",
  "lint-staged": {
    "*.ts": "eslint --fix"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-angular"
    ],
    "rules": {
      "scope-case": [
        2,
        "always",
        "pascal-case"
      ],
      "type-enum": [
        2,
        "always",
        [
          "chore",
          "build",
          "ci",
          "docs",
          "feat",
          "fix",
          "perf",
          "refactor",
          "revert",
          "style",
          "test"
        ]
      ]
    }
  }
}
